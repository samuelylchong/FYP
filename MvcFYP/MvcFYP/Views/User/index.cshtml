@model IEnumerable<MvcFYP.Models.User>
@{
    ViewBag.Title = "index";
}
<br>
<h2>All Users</h2>
<br>

<!DOCTYPE html>

<p>
    @Html.ActionLink("Create New", "AddOrEdit", "User")
</p>
<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>@Html.DisplayNameFor(model => model.Role)</th>
        <th></th>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Role)</td>
            <td>
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                <a href="@Url.Action("Delete", "User", new { id = item.Id }, null)" onclick="return confirm('Are you sure you want to Delete?')">Delete</a>
            </td>
        </tr>
    }
    </table>

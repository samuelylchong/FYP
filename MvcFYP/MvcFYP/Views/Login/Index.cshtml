<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V2</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Login_v2/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Login_v2/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Login_v2/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/Login_v2/vendor/animate/animate.css" rel="stylesheet" />
    <link href="~/Login_v2/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Login_v2/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
    <link href="~/Login_v2/vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Login_v2/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Login_v2/css/util.css" rel="stylesheet" />
    <link href="~/Login_v2/css/main.css" rel="stylesheet" />



</head>
<body>
    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-26">
                            Welcome
                        </span>
                        <span class="login100-form-title p-b-48">

                        </span>

                        <div class="wrap-input100">
                            @Html.TextBoxFor(model => model.Username, new { @class = "input100", @type = "text" })
                            @*<input class="input100" type="text">*@
                            <span class="focus-input100" data-placeholder="User Name"></span>
                            @Html.ValidationMessageFor(model => model.Username, null, new { @class = "red-message"})
                        </div>


                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            <span class="btn-show-pass">
                                <i class="zmdi zmdi-eye"></i>
                            </span>
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", @name = "pass", @type = "password" })
                            @*<input class="input100" type="password" name="pass">*@
                            <span class="focus-input100" data-placeholder="Password"></span>
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "red-message"})
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button type="submit" name="name" value="Login" class="login100-form-btn">Login</button>
                                @*<button class="login100-form-btn">
                                    Login
                                </button>*@
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }

    <div id="dropDownSelect1"></div>

    <script src="~/Login_v2/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Login_v2/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/Login_v2/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_v2/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Login_v2/vendor/select2/select2.min.js"></script>
    <script src="~/Login_v2/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login_v2/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Login_v2/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Login_v2/js/main.js"></script>

</body>
</html>